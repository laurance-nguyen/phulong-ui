{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noEmptyInterface": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "ignore": [
      "node_modules/**/*",
      "dist/**/*",
      "build/**/*",
      "coverage/**/*",
      "docs/**/*",
      "public/**/*",
      "scripts/**/*",
      "test/**/*",
      "tmp/**/*",
      "vendor/**/*",
      ".next/**/*",
      ".vscode/**/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  }
}